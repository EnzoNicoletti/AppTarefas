@model AppTarefas.Models.Tarefa

@{
	ViewData["Title"] = "Excluir Tarefa";
}

<h1 class="mb-3">Excluir Tarefa</h1>
<p>Tem certeza que deseja excluir a tarefa <strong>@Model.Titulo</strong>?</p>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="TarefaId" />
	<button type="submit" class="btn btn-danger">Excluir</button>
	<a asp-controller="Tarefas" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>